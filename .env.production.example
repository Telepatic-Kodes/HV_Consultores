# =============================================================================
# HV-Consultores - Production Environment Variables
# =============================================================================
# IMPORTANT: Never commit actual values. Use Vercel Environment Variables UI.
# =============================================================================

# Supabase Configuration (Production Project)
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key

# OpenAI Configuration (for HV-Chat AI features)
OPENAI_API_KEY=sk-your_production_openai_key

# Nubox API Configuration (Production)
NUBOX_API_URL=https://api.nubox.com
NUBOX_API_KEY=your_production_nubox_key
NUBOX_API_SECRET=your_production_nubox_secret

# Encryption Key (32 characters - for credential storage)
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=your_32_character_production_key

# Application Settings
NODE_ENV=production

# Demo Mode - MUST be 'false' in production
NEXT_PUBLIC_SHOW_DEMO_CREDENTIALS=false

# RPA Server Configuration
# In production, this should point to your deployed RPA server
RPA_SERVER_URL=https://rpa.your-domain.com
RPA_WEBHOOK_SECRET=your_secure_webhook_secret

# Base URL for the application
NEXT_PUBLIC_APP_URL=https://your-domain.com

# =============================================================================
# Vercel-Specific Variables (automatically set by Vercel)
# =============================================================================
# VERCEL_URL - Automatically set by Vercel
# VERCEL_ENV - Automatically set (production/preview/development)
