# HV Consultores - SII RPA Server Configuration

# Server Configuration
PORT=3001
SERVER_NAME=rpa-server-1
NODE_ENV=development
LOG_LEVEL=info

# Browser Configuration
MAX_BROWSERS=5
BROWSER_TIMEOUT_MS=300000
HEADLESS=true

# Security
API_KEY=your-api-key-here

# Webhook Configuration (to notify main app)
WEBHOOK_URL=http://localhost:3000/api/sii-rpa/webhook
WEBHOOK_SECRET=your-webhook-secret

# Supabase (for direct DB access if needed)
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_KEY=your-service-key

# CORS
ALLOWED_ORIGINS=http://localhost:3000

# Encryption (must match main app)
CREDENTIALS_ENCRYPTION_KEY=your-32-byte-hex-key-for-aes-256-gcm

# Retry Configuration
MAX_RETRIES=3
RETRY_INITIAL_DELAY_MS=1000
RETRY_MAX_DELAY_MS=30000

# ============================================================================
# ALERTAS (opcional)
# ============================================================================

# Slack Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#sii-rpa-alerts
SLACK_MENTIONS=@here

# Email Alerts (separados por coma)
ALERT_EMAIL_TO=admin@hvconsultores.cl,soporte@hvconsultores.cl
ALERT_EMAIL_FROM=noreply@hvconsultores.cl

# Minimum severity for alerts: info, warning, error, critical
ALERT_MIN_SEVERITY=warning

# ============================================================================
# DOCKER (solo para docker-compose)
# ============================================================================

# CPU and Memory limits
DOCKER_CPU_LIMIT=2
DOCKER_MEMORY_LIMIT=4G
