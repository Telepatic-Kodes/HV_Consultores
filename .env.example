# Convex Backend
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_DEPLOYMENT=prod:your-deployment-name

# Application Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Demo Mode (set to 'true' only in development/staging)
NEXT_PUBLIC_SHOW_DEMO_CREDENTIALS=true

# OpenAI Configuration (para HV-Chat AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Nubox API Configuration
NUBOX_API_URL=https://api.nubox.com
NUBOX_API_KEY=your_nubox_api_key_here
NUBOX_API_SECRET=your_nubox_api_secret_here

# Encryption Key (para credenciales de portales)
ENCRYPTION_KEY=your_32_character_encryption_key

# RPA Server Configuration (for HV-Bancos and HV-Docs automation)
RPA_SERVER_URL=http://localhost:3001
RPA_WEBHOOK_SECRET=your_webhook_secret_here
